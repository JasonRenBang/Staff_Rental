rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection - allow all operations for demo
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Rentals collection - allow read/create/update, but not delete
    match /rentals/{rentalId} {
      allow read, create, update: if true;
      allow delete: if false; // Prevent accidental deletion of rental history
    }
    
    // Serial Number index - for uniqueness checks
    match /serial_index/{serialNumber} {
      allow read: if true;
      allow create: if !exists(/databases/$(database)/documents/serial_index/$(serialNumber));
      allow update: if false; // Serial numbers should not be updated directly
      allow delete: if true; // Allow deletion when product is deleted
    }
  }
}
